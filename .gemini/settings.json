{
    "context": {
        "fileName": ["GEMINI.md"],
        "fileFiltering": {
        "respectGitIgnore": false
        }
    },
    "privacy": {"usageStatisticsEnabled": false},
    "mcpServers": {
        "workspace-mcp": {
            "command": "uvx",
            "args": [
                "workspace-mcp",
                "--single-user"
            ],
            "envFile": "${workspaceFolder}/.env",
            "type": "stdio"
        },
        "datadog-mcp": {
            "command": "npx",
                "args": [
                    "mcp-remote",
                    "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp"
                ]
        },
        "atlassian-mcp": {
            "command": "npx",
                "args": [
                    "mcp-remote",
                    "https://mcp.atlassian.com/v1/sse"
                ]
        }
    }
}